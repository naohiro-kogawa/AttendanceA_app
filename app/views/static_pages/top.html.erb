<% provide(:title, "Top") %>
<div class="center jumbotron">
  <h1>勤怠システム</h1>
  
     <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
       <% if logged_in? %>
          <%= f.submit "ログイン状態です", class: "btn btn-lg btn-primary", disabled: "disabled" %>
       <% else %>
          <%= f.submit "ログイン", class: "btn btn-lg btn-primary" %>
        <% end %>
     <% end %>    
    <p>
      アカウント作成は<%= link_to "こちら", signup_path %>から
    </p>
</div>